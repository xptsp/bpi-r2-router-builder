[Unit]
Description=Docker Compose Service
ConditionFileNotEmpty=/etc/docker/compose.d/docker-compose.yaml
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStartPre=/opt/bpi-r2-router-builder/helpers/compose-helper.sh docker-compose 
ExecStart=/usr/local/bin/docker compose -f /etc/docker/compose.d/docker-compose.yaml up -d
ExecStop=/usr/local/bin/docker compose -f /etc/docker/compose.d/docker-compose.yaml down

[Install]
WantedBy=multi-user.target
